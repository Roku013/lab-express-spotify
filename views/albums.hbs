<div class='search-results'>
  {{#each albums}}
    <div class='each-item'>
      <a href='/tracks/{{this.id}}'><img
          src='{{this.images.0.url}}'
          alt='{{this.name}}'
        /></a>

      <div class='item-description'>
        <p>{{this.name}}</p>
        <a href='/tracks/{{this.id}}'>view tracks</a>
      </div>

    </div>

  {{/each}}
</div>